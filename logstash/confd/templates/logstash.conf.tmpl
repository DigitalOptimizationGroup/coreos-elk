input {
  tcp {
    port => 10102
    type => "mobile"
  }
  lumberjack {
    port => 10101
    ssl_certificate => "/opt/logstash/ssl/logstash-forwarder.crt"
    ssl_key => "/opt/logstash/ssl/logstash-forwarder.key"
  }
}

output {
  elasticsearch {
    protocol => "http"
    host => "{{ .services_elasticsearch_host }}"
    port => 9200
  }
  stdout { codec => json }
}
